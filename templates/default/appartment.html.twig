{% extends 'base.html.twig' %}

{% block title %}
    {{ 'appartment.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <main>
        <h1>{{ 'appartment.title'|trans }}</h1>
        <p>{{ 'appartment.description'|trans|raw }}</p>
        <h2>{{ 'object.features'|trans }}</h2>
        <ul>
            <li>{{ 'appartment.feature.livingroom'|trans }}</li>
            <li>{{ 'appartment.feature.bedroom'|trans }}</li>
            <li>{{ 'appartment.feature.crib'|trans }}</li>
            <li>{{ 'appartment.feature.bathroom'|trans }}</li>
            <li>{{ 'appartment.feature.tv'|trans }}</li>
            <li>{{ 'object.feature.padio'|trans }}</li>
            <li>{{ 'object.feature.lawn'|trans }}</li>
            <li>{{ 'object.feature.parking'|trans }}</li>
            <li>{{ 'appartment.feature.bbq'|trans }}</li>
            <li>{{ 'appartment.feature.suitableForWheelchairs'|trans }}</li>
        </ul>
        <h2>{{ 'object.pricing'|trans }}</h2>
        <ul>
            <li>{{ 'appartment.pricing.threeNights'|trans }}</li>
            <li>{{ 'appartment.pricing.additionalNights'|trans }}</li>
            <li>{{ 'appartment.pricing.children'|trans }}</li>
            <li>{{ 'appartment.pricing.twoNights'|trans }}</li>
        </ul>
    </main>
{% endblock %}
