{% extends 'base.html.twig' %}

{% block title %}
    {{ 'booking.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <main>
        <h1>{{ 'booking.title'|trans }}</h1>
        {{ form_start(form) }}
        {{ form_row(form.booking.accommodation) }}
        {{ form_row(form.booking.firstName) }}
        {{ form_row(form.booking.lastName) }}
        {{ form_row(form.booking.street) }}
        {{ form_row(form.booking.streetNumber) }}
        {{ form_row(form.booking.zipcode) }}
        {{ form_row(form.booking.city) }}
        {{ form_row(form.booking.arrivalDate) }}
        {{ form_row(form.booking.departureDate) }}
        {{ form_row(form.booking.phone) }}
        {{ form_row(form.booking.email) }}
        {{ form_row(form.booking.comments) }}
        <div>
            {{ form_errors(form.agreedToTerms) }}
            {{ form_widget(form.agreedToTerms) }}
            <label for="booking_with_checkbox_agreedToTerms" class="required">
                {{ 'form.field.agreedToTermsPreLink'|trans }}
                <a href="{{ url('privacy') }}">{{ 'form.field.agreedToTermsLink'|trans }}</a>
                {{ 'form.field.agreedToTermsPostLink'|trans }}
            </label>
        </div>
        <button type="submit">{{ 'booking.submit'|trans }}</button>
        {{ form_end(form) }}
    </main>
{% endblock %}
